# ============================================
# Application Configuration
# ============================================

# Node environment: development, production, or test
# Default: development
NODE_ENV=development

# Server port
# Default: 8080
PORT=8080

# ============================================
# Database Configuration
# ============================================

# Option 1: Use database URL (recommended for production)
# If DB_URL is provided, individual DB_* settings below will be ignored
DB_URL=postgresql://username:password@localhost:5432/auth_demo

# Option 2: Use individual database settings
# Only used if DB_URL is not provided
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=auth_demo

# ============================================
# Authentication Secrets
# ============================================

# Session secret for express-session
# Generate a strong random string (e.g., using: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-key-change-this-in-production

# JWT Access Token secret
# Generate a strong random string (e.g., using: openssl rand -base64 32)
JWT_ACCESS_SECRET=your-jwt-access-secret-key-change-this-in-production

# JWT Refresh Token secret
# Generate a strong random string (e.g., using: openssl rand -base64 32)
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-this-in-production

# JWT Token expiration times
# Default: 15m (15 minutes)
JWT_ACCESS_EXPIRES_IN=15m
# Default: 7d (7 days)
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Google OAuth Configuration
# ============================================

# Google OAuth Client ID
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google OAuth Client Secret
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google OAuth Redirect URLs
# Session client redirect URL (port 3000)
GOOGLE_SESSION_REDIRECT_URL=http://localhost:3000/oauth/callback

# JWT client redirect URL (port 3001)
GOOGLE_JWT_REDIRECT_URL=http://localhost:3001/oauth/callback

# ============================================
# CORS Configuration
# ============================================

# Comma-separated list of allowed frontend origins
# Default: http://localhost:3000,http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
